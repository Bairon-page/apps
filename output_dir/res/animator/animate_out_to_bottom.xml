<?xml version="1.0" encoding="utf-8"?>
<set android:ordering="sequentially"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <set>
        <objectAnimator android:duration="100" android:startOffset="0" android:valueFrom="#33000000" android:valueTo="#00000000" android:propertyName="backgroundColor" />
    </set>
    <set android:ordering="together">
        <objectAnimator android:duration="150" android:valueFrom="0" android:valueTo="100" android:valueType="floatType" android:propertyName="translationY" />
        <objectAnimator android:duration="150" android:valueFrom="1" android:valueTo="0" android:valueType="floatType" android:propertyName="alpha" />
    </set>
</set>