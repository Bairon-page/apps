            "id": 96466,
            "contentType": "interactive",
            "images": [],
            "interactiveContent": "<!DOCTYPE html ><html><body><p>Псевдонимы не изменяют имя в оригинальной таблице. Псевдонимы, такие как <code>user</code>, являются временными именами в результирующей таблице.</p><database visible-if=\"always\" bootstrapScript=\"CREATE TABLE contacts (&#xA; first_name varchar(255),&#xA; last_name varchar(255),&#xA; email varchar(255)&#xA;);&#xA;&#xA;INSERT INTO contacts (first_name, last_name, email)&#xA;VALUES ('Sam', 'Smith', 'sam17@mail.com');&#xA;&#xA;&#xA;INSERT INTO contacts (first_name, last_name, email)&#xA;VALUES ('Remy', 'Allard', 'rem@mail.com');&#xA;&#xA;INSERT INTO contacts (first_name, last_name, email)&#xA;VALUES ('Luis', 'Martinez', 'luis_99@mail.com');&#xA;&#xA;INSERT INTO contacts (first_name, last_name, email)&#xA;VALUES ('Kim', 'Zhong', 'kim.z@mail.com');&#xA;\"><tables><table name=\"contacts\"><row><header content=\"first_name\" /><header content=\"last_name\" /><header content=\"email\" /></row><row><data content=\"Sam\" /><data content=\"Smith\" /><data content=\"sam17@mail.com\" /></row><row><data content=\"Remy\" /><data content=\"Allard\" /><data content=\"rem@mail.com\" /></row><row><data content=\"Luis\" /><data content=\"Martinez\" /><data content=\"luis_99@mail.com\" /></row><row><data content=\"Kim\" /><data content=\"Zhong\" /><data content=\"kim.z@mail.com\" /></row></table></tables></database><code version=\"2\" codelang=\"sql\" name=\"script.sql\" visible-if=\"always\"><content><text value=\"SELECT\" class=\"keyword\" /><text value=\" first_name \" /><text value=\"AS\" class=\"keyword\" /><text value=\" \" /><text value=\"user\" class=\"keyword\" /><text type=\"break\" /><text value=\"FROM\" class=\"keyword\" /><text value=\" contacts;\" /></content><interactions><interaction type=\"fillTheGap\" isDefault=\"true\"><options><option startIndex=\"0\" endIndex=\"6\" /><option startIndex=\"7\" endIndex=\"17\" /><option startIndex=\"18\" endIndex=\"20\" /><option startIndex=\"21\" endIndex=\"25\" /></o