;&#xA;    background-color: #34495E;&#xA;    color: #FFF;&#xA;    font-size: 14px;&#xA;    border: none;&#xA;    border-radius: 5px;&#xA;    cursor: pointer;&#xA;    margin: 7px;&#xA;    text-align: center;&#xA;   }&#xA;   &#xA;   #result {&#xA;    width: 80%;&#xA;    height: 20px;&#xA;    padding: 10px;&#xA;    font-size: 1.3em;&#xA;    margin: 0px auto;&#xA;    border-radius: 5px;&#xA;    color: white;&#xA;    font-weight: bold;&#xA;   }&#xA;   &#xA;   img {&#xA;    width: 80%;&#xA;    max-width:150px;&#xA;    height: auto;&#xA;    border-radius: 5px;&#xA;    margin: 10px auto;&#xA;    text-align: center;&#xA;    display: none;&#xA;    justify-content: center;&#xA;    border: white 2px solid;&#xA;   }&#xA;  &lt;/style&gt;&#xA; &lt;/head&gt;&#xA; &lt;body&gt;&#xA;  &lt;h1 id=&quot;result&quot;&gt;Guess the letter&lt;/h1&gt;&#xA;  &lt;h2&gt;_ O G&lt;/h2&gt;&#xA;  &lt;img&gt;&#xA;  &lt;div id=&quot;letterButtons&quot;&gt;&#xA;   &lt;button&gt;Q&lt;/button&gt;&#xA;   &lt;button&gt;R&lt;/button&gt;&#xA;   &lt;button&gt;D&lt;/button&gt;&#xA;  &lt;/div&gt;&#xA;  &lt;script&gt;&#xA;   let letterButtons = document.querySelectorAll(&#xA;    '#letterButtons button');&#xA;   let result = document.getElementById('result');&#xA;   let image = document.getElementsByTagName(&quot;img&quot;)[0];&#xA;   let correctLetter = 'D';&#xA;   let word = document.querySelector('h2');&#xA;   letterButtons.forEach(button =&gt; {&#xA;    button.addEventListener('click', function() {&#xA;     let letter = this.textContent;&#xA;     if (letter !== correctLetter) {&#xA;      button.disabled = true;&#xA;     }&#xA;     if (letter === correctLetter) {&#xA;      result.innerHTML = 'Correct!';&#xA;      result.style.color = &quot;#046865&quot;;&#xA;      image.style.display = &quot;flex&quot;;&#xA;      image.src = 'https://mimo.app/i/dog_yawn.png';&#xA;      word.textContent = 'D O G';&#xA;      letterButtons.forEach(button =&gt; {&#xA;       button.disabled = true;&#xA;      });&#xA;     } else {&#xA;      result.innerHTML = 'Try again';&#xA;      result.style.color = &quot;#D1345B&quot;;&#xA;     }&#xA;    });&#xA;   });&#xA;  &lt;/script&gt;&#xA; &lt;/body&gt;&#xA;&lt;/html&gt;\" /><p visible-if=\"wrong\">Wähle <code>&lt;button&gt;</code>, gefolgt von <code>D</code> und schließlich <code>&lt;/button&gt;</code> aus.</p></body></html>"
